+	if len(options.Inet4Address) > 0 {
+		for _, address := range options.Inet4Address {
+			ifReq := ifAliasReq{
+				Addr: unix.RawSockaddrInet4{
+					Len:    unix.SizeofSockaddrInet4,
+					Family: unix.AF_INET,
+					Addr:   address.Addr().As4(),
+				},
+				Dstaddr: unix.RawSockaddrInet4{
