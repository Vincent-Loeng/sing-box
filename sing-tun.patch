+func checkDHCP(name string) error {
+	_, err := exec.Command("rcctl", "check", "dhcpleased").CombinedOutput()
+	if err != nil {
+		return nil
+	}
+
+	ErrNoIgnoreDNS := fmt.Errorf("please add `ignore dns` option for interface %s in %s", name, dhcpleasedPath)
+	file, err := os.OpenFile(dhcpleasedPath, os.O_RDONLY, 0644)
+	if err != nil {
+		if errors.Is(err, os.ErrNotExist) {
+			return ErrNoIgnoreDNS
+		}
+		return err
+	}
+	defer file.Close()
+	reader := bufio.NewReader(file)
+	var sb strings.Builder
+	for {
+		line, err := reader.ReadString('\n')
+		line = strings.TrimSpace(line)
+		if err != nil {
+			if err != io.EOF {
+				return err
+			}
+			if len(line) == 0 {
+				break
+			}
+		}
+		if len(line) == 0 || line[0] == '#' {
+			continue
+		}
+		sb.WriteString(line)
+	}
+	dhcpleasedString := sb.String()
+	containIf := strings.Contains(dhcpleasedString, fmt.Sprintf("interface %s", name))
+	containIgnore := strings.Contains(dhcpleasedString, "ignore dns")
+	if !(containIf && containIgnore) {
+		return ErrNoIgnoreDNS
+	}
+	return nil
