+	//To prevent "address family not supported by protocol family"
+	switch uint(p[3]) {
+	case unix.AF_INET:
+		copy(p[:4], packetHeader4[:])
+	case unix.AF_INET6:
+		copy(p[:4], packetHeader6[:])
+	}
+	return t.tunFile.Write(p)
