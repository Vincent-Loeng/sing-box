+func (t *NativeTun) WriteVectorised(buffers []*buf.Buffer) error {
+	var packetHeader []byte
+	switch header.IPVersion(buffers[0].Bytes()) {
+	case header.IPv4Version:
+		packetHeader = packetHeader4[:]
+	case header.IPv6Version:
+		packetHeader = packetHeader6[:]
+	}
+	// syscall.SYS_WRITEV is not implemented
+	newBuffers := append([]*buf.Buffer{buf.As(packetHeader)}, buffers...)
+	var newByte []byte
+	for _, buffer := range newBuffers {
+		newByte = append(newByte, buffer.Bytes()...)
+	}
+	_, err := t.tunFile.Write(newByte)
+	return err
